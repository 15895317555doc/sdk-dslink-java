{
  "name": "responder",
  "version": "0.0.1",
  "description": "An example responder dslink to demonstrate data handling",
  "license": "Apache",
  "author": {
    "name": "Samuel Grenier",
    "email": "samrg472@gmail.com"
  },
  "main": "bin/responder",
  "repository": {
    "type": "git",
    "url": "https://github.com/IOT-DSA/sdk-dslink-java"
  },
  "bugs": {
    "url": "https://github.com/IOT-DSA/sdk-dslink-java/issues"
  },
  "configs": {
    "name": {
      "type": "string",
      "default": "responder"
    },
    "broker": {
      "type": "url"
    },
    "nodes": {
      "type": "path",
      "default": "nodes.json"
    },
    "key": {
      "type": "path",
      "default": ".key"
    },
    "log": {
      "type": "enum",
      "default": "info"
    },
    "handler_class": {
      "type": "string",
      "default": "org.dsa.iot.responder.Main"
    }
  }
}
